{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ES2022",
    "strict": true,
    "lib": [
      "DOM",
      "ES2020",
      "ES2021.String"
    ],
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node"
  },
  "ts-node": {
    "files": true,
    "compilerOptions": {
      "target": "ES5",
      "module": "CommonJS",
      "allowArbitraryExtensions": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "allowJs": true
    },
    "experimentalResolver": true
  }
}